<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material.Light" />

    <style name="TextAppearance.AppTheme" parent="">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Regular">
        <item name="android:fontFamily">@font/weird_font</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.AppTheme.Italic">
        <item name="android:fontFamily">@font/weird_font</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.AppTheme.Bold">
        <item name="android:fontFamily">@font/weird_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppTheme.BoldItalic">
        <item name="android:fontFamily">@font/weird_font</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
</resources>
